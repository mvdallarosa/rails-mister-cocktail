      <a href="/" class="navbar-brand text-white">CoksWOW</a>
      <%= link_to "Create your own", new_cocktail_path, class: "font-weight-lighter btn btn-outline-info" %>
    </nav>
    <div>
      <%= yield %>
    </div>
  </body>
</html>
